{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Banner rotator config schema",
  "type": "array",
  "items": {
    "$ref": "#/definitions/banner"
  },
  "definitions": {
    "banner": {
      "type": "object",
      "required": ["entry"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string"
        },
        "entry": {
          "type": "string"
        },
        "startDate": {
          "type": "string",
          "pattern": "^\d{4}-\d{2}-\d{2}(\s\d{2}:\d{2})?$"
        },
        "endDate": {
          "type": "string",
          "pattern": "^\d{4}-\d{2}-\d{2}(\s\d{2}:\d{2})?$"
        },
        "locations": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "countries": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "data": {
          "type": ["string", "array", "object", "number"]
        }
      }
    }
  }
}
